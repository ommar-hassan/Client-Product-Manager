@page
@model ClientProductManager.Pages.ClientProducts.DeleteModel

@{
    ViewData["Title"] = "Delete Client Product";
}

<h2>Delete Client Product</h2>
<hr />

<h4>Are you sure you want to delete this product assignment?</h4>

<div class="mt-4">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientProductViewModel.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientProductViewModel.ProductName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientProductViewModel.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientProductViewModel.StartDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientProductViewModel.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientProductViewModel.EndDate)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientProductViewModel.License)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientProductViewModel.License)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="ClientProductViewModel.Id" />
        <input type="hidden" asp-for="ClientProductViewModel.ClientId" />

        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a class="btn btn-secondary mx-3" asp-page="/Clients/Details" asp-route-id="@Model.ClientProductViewModel.ClientId">Cancel</a>
        </div>
    </form>
</div>
